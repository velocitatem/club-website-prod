---
const {frontmatter} = Astro.props;
---
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.15.1/dist/katex.css" integrity="sha384-WsHMgfkABRyG494OmuiNmkAOk8nhO1qE+Y6wns6v+EoNoTNxrWxYpl5ZYWFOLPCM" crossorigin="anonymous">
<style is:global>
@tailwind base;

.blog {
  @apply max-w-5xl mx-auto px-4 py-12 bg-gray-100;
  a {
    @apply text-blue-700 underline hover:text-blue-900;
  }
  p {
    @apply text-gray-800 my-6 leading-7 text-justify;
  }
  h1 {
    @apply text-6xl font-extrabold text-gray-900 mb-4 mt-4 leading-tight;
    border-bottom: 4px solid text-gray-800; /* Added a bottom border for clear title distinction */
    padding-bottom: 0.25rem; /* Padding for the border */
  }
  h2 {
    @apply text-4xl font-semibold text-gray-800 mb-6 mt-6;
  }
  h3 {
    @apply text-3xl font-medium text-gray-700 mb-4 mt-4;
  }
  h4 {
    @apply text-2xl font-medium text-gray-600 mb-3 mt-3;
  }
  img {
    @apply rounded-lg w-full h-auto mb-8 shadow-lg;
  }
  blockquote {
    @apply border-l-8 border-blue-600 pl-4 italic text-gray-600 bg-blue-100 p-4 my-4;
  }
  pre {
    @apply bg-gray-900 text-white p-6 rounded-md overflow-x-auto mt-4 mb-4;
    code {
      @apply font-mono text-lg;
    }
  }
  code:not(pre > code) {
    @apply bg-gray-200 text-gray-800 px-1 py-0.5 rounded;
  }
  ul {
    @apply list-disc pl-6;
  }
  ol {
    @apply list-decimal pl-6;
  }
  li {
    @apply mb-2;
  }
}

@tailwind components;
@tailwind utilities;
</style>
<html lang='end'>
<head>
  <meta charset="UTF-8" />
  <meta name="description" content="Astro description" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <title>{frontmatter.title}</title>
</head>
<script>
  var _paq = window._paq = window._paq || [];
/* tracker methods like "setCustomDimension" should be called before "trackPageView" */
_paq.push(['trackPageView']);
_paq.push(['enableLinkTracking']);
(function() {
  var u="https://danielalvesworld.matomo.cloud/";
  _paq.push(['setTrackerUrl', u+'matomo.php']);
  _paq.push(['setSiteId', '4']);
  var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
  g.async=true; g.src='//cdn.matomo.cloud/danielalvesworld.matomo.cloud/matomo.js'; s.parentNode.insertBefore(g,s);
})();
</script>
<body>
  <header>
  <!--   <h1 class="text-3xl text-blue-800"> -->
  <!--     Blog | AI and Robotics Club<span class="text-lg text-gray-900">{frontmatter.title}</span> -->
  <!--   </h1> -->
  </header>

  <main class="blog">
  <h1>
    {frontmatter.title}
  </h1>
    <slot />
  </main>
  <footer class="text-center text-gray-500 text-sm my-4">
    <p>2023 AI and Robotics Club</p>
  </footer>
</body>
</html>
