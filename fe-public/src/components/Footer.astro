---
import socials from '../scripts/socials.json'


---

<footer class="flex justify-center text-center my-5">
  <ul class="list">
    {
      socials.map((current) => {
        return (
          <li class="inline-block mx-4 p-5">
            <a href={current.link} class="flex justify-center">
              <svg xmlns={current.xmlns} x="0px" y="0px" width="50" height="50" viewBox="0 0 24 24">
                <path d={current.d} class="dark:fill-slate-300"/>
              </svg>
            </a>
            <p class="pt-[20px]">{current.name}</p>
          </li>
        )
      })
    }
  </ul>
</footer>
