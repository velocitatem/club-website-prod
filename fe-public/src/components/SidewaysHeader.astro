---
interface Props {
    title: string;
}

const { title, } = Astro.props;
---

<p id="h" class="">{title}</p>
<style>
    #h {
        position: absolute;
        font-size: 30px;
        writing-mode: vertical-rl;
        text-orientation: mixed;
        transform: scale(-1, -1);
        top: 0;
        left: 200px;
        align-self: center;
    }
    /* Reset rotation on mobile screens */
    @media (max-width: 768px) {
        #h {
            position: relative;
            transform: rotate(-90deg);
            top: 0;
            left: 0;
            align-self: center;
            left: 50%;
            transform: translateX(-50%) rotate(-90deg);

        }
    }
</style>
